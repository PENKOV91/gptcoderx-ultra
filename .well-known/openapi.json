{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT-CODER X ULTRA",
    "version": "1.0.0",
    "description": "Персонализиран GPT агент за създаване на MQL4/MQL5/Python код чрез DeepSeek-Chat и Reasoner."
  },
  "servers": [
    {
      "url": "https://gptcoderx-ultra.onrender.com",
      "description": "Production сървър"
    }
  ],
  "tags": [
    {
      "name": "Code Generation",
      "description": "Операции за генериране на код"
    },
    {
      "name": "Search",
      "description": "Търсене във външни източници"
    }
  ],
  "paths": {
    "/code/deepseek": {
      "post": {
        "tags": ["Code Generation"],
        "summary": "Генериране на код с DeepSeek Chat",
        "operationId": "generateWithDeepSeek",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["prompt"],
                "properties": {
                  "prompt": {
                    "type": "string",
                    "minLength": 10
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Генериран код от DeepSeek",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {"type": "string"},
                    "model_used": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/search/github": {
      "post": {
        "tags": ["Search"],
        "summary": "Извличане на репозитории от GitHub",
        "operationId": "searchGitHub",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["query"],
                "properties": {
                  "query": {
                    "type": "string",
                    "minLength": 3
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Резултати от GitHub",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {"type": "string"},
                      "url": {"type": "string", "format": "uri"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "APIKeyHeader": {
        "type": "apiKey",
        "name": "X-API-KEY",
        "in": "header"
      }
    }
  }
}
