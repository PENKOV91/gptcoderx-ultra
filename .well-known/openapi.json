{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT-CODER X ULTRA",
    "version": "1.0.0",
    "description": "Персонализиран GPT агент за създаване на MQL4/MQL5/Python код чрез DeepSeek-Chat и Reasoner. Поддържа извличане от GitHub, WebPilot и MQL5, както и логическа обработка и кодова генерация върху обединени външни източници."
  },
  "servers": [
    {
      "url": "https://gptcoderx-ultra.onrender.com"
    }
  ],
  "paths": {
    "/code/deepseek": {
      "post": {
        "summary": "Генериране на код с DeepSeek Chat",
        "operationId": "generateWithDeepSeek",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["prompt"],
                "properties": {
                  "prompt": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Генериран код от DeepSeek"
          }
        }
      }
    },
    "/code/reasoner": {
      "post": {
        "summary": "Логическо разсъждение с DeepSeek Reasoner",
        "operationId": "generateWithReasoner",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["prompt"],
                "properties": {
                  "prompt": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Анализ от Reasoner"
          }
        }
      }
    },
    "/code/reasoning-chain": {
      "post": {
        "summary": "Reasoning верига: Chat → Reasoner → Chat",
        "operationId": "reasoningChain",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["prompt"],
                "properties": {
                  "prompt": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Резултат от reasoning верига"
          }
        }
      }
    },
    "/code/reasoning-merge": {
      "post": {
        "summary": "Reasoning и генерация върху обединени външни данни",
        "operationId": "reasoningMerge",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "github_results": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  },
                  "webpilot_results": {
                    "type": "object"
                  },
                  "mql5_results": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Анализ и код от DeepSeek върху външни източници"
          }
        }
      }
    },
    "/search/github": {
      "post": {
        "summary": "Извличане на репозитории от GitHub",
        "operationId": "searchGitHub",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["query"],
                "properties": {
                  "query": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Резултати от GitHub"
          }
        }
      }
    },
    "/search/webpilot": {
      "post": {
        "summary": "Web scraping чрез WebPilot",
        "operationId": "searchWebPilot",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["link", "query"],
                "properties": {
                  "link": {
                    "type": "string"
                  },
                  "query": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Резултати от WebPilot"
          }
        }
      }
    },
    "/merge/results": {
      "post": {
        "summary": "Обединяване на резултати от GitHub, WebPilot, MQL5",
        "operationId": "mergeSearchResults",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "github_results": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  },
                  "webpilot_results": {
                    "type": "object"
                  },
                  "mql5_results": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Обединени резултати, подготвени за reasoning"
          }
        }
      }
    }
  }
}
